<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BlockPuzzle.ViewModels"
			 xmlns:models="clr-namespace:BlockPuzzle.Models"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="900"
             x:Class="BlockPuzzle.Views.MainView"
             x:DataType="vm:MainViewModel">
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Current Score" Margin="10"/>
			<TextBlock Text="Icon" Margin="10"/>
			<TextBlock Text="Before Score" Margin="10"/>
		</StackPanel>
		<ItemsControl ItemsSource="{Binding Cells}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Image	Grid.Row="{Binding X}"
							Grid.Column="{Binding Y}"
							Margin="1"
							Height="32"
							Width="32"
							Source="avares://BlockPuzzle/Assets/Tile.png"/>
				</DataTemplate>
			</ItemsControl.ItemTemplate>

			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<UniformGrid Columns="8" Margin="10"/>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
		</ItemsControl>

		<StackPanel Orientation="Horizontal">
			<TextBlock Text="Block" Margin="10"/>
			<TextBlock Text="Block" Margin="10"/>
			<TextBlock Text="Block" Margin="10"/>
		</StackPanel>
	</StackPanel>
</UserControl>
